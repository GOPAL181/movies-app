        }
        .dark-bg {
            background-color: #343a40 !important;
        }
        .white-text {
            color: white !important;
        }
        .card-column {
            flex: 0 0 calc(25% - 1rem); /* 4 cards per row */
            margin: 0.5rem;
        }
        .flex-container {
            display: flex;
            align-items: center;
            margin-top: 5rem;
        }
        .flex-container .btn {
            margin-right: 1rem;
        }
        .highlight {
            background-color: #20c997;
            padding: 0.5rem;
            border-radius: 5px;
